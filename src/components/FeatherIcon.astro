---
import feather from "feather-icons";

interface Props {
  name: string;
  size?: number;
  stroke?: number;
  class?: string;
}

const { name, size = 20, stroke = 2, class: className = "" } = Astro.props;

const iconHtml = feather.icons[name as keyof typeof feather.icons]?.toSvg({
  width: size,
  height: size,
  "stroke-width": stroke,
});
---

<span class={className} set:html={iconHtml} />
