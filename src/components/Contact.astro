---
import { getProfile } from "../lib/directus";
import FeatherIcon from "./FeatherIcon.astro";

const profile = await getProfile();

const email = profile?.email || "aloiscarrera@gmail.com";
const linkedin = profile?.linkedin || "alois-carrera";
const github = profile?.github || "AloisCRR";

// Collaboration project types based on interests
const collaborationAreas = [
  {
    icon: "code",
    title: "Web Development",
    description:
      "Full-stack applications with modern frameworks and architectures",
    examples: [
      "SPA/SSR web applications",
      "Static sites",
      "Content management systems",
    ],
  },
  {
    icon: "cpu",
    title: "AI & LLMs",
    description: "Building intelligent applications with large language models",
    examples: ["RAG systems", "LLM fine-tuning", "AI-powered tools"],
  },
  {
    icon: "database",
    title: "Data Engineering",
    description: "Data pipelines, warehousing, and analytics solutions",
    examples: [
      "ETL/ELT workflows",
      "Data visualization",
      "Streaming data systems",
    ],
  },
  {
    icon: "server",
    title: "Systems & Backend",
    description: "Robust backend services and distributed systems",
    examples: ["Microservices", "APIs (REST, GraphQL)", "Kubernetes"],
  },
  {
    icon: "smartphone",
    title: "Mobile Apps",
    description: "Cross-platform mobile application development",
    examples: ["React Native", "Flutter"],
  },
  {
    icon: "git-branch",
    title: "Open Source",
    description: "Contributing to or starting open source projects",
    examples: ["Library maintenance", "Documentation", "Feature development"],
  },
];
---

<section id="collaborate" class="scroll-mt-16 relative">
  <div class="max-w-3xl mx-auto relative z-10">
    <h2 class="text-3xl font-bold mb-8">Let's Collaborate</h2>

    <div
      class="mb-8 border border-slate-200 dark:border-slate-700 rounded-lg p-6 bg-white dark:bg-slate-800/40"
    >
      <h3 class="text-xl font-semibold mb-4">
        I'm looking to collaborate on exciting projects!
      </h3>
      <p class="text-slate-700 dark:text-slate-300 mb-6">
        Whether you have an idea, need help with your project, or want to start
        something new together, I'm interested in collaborating in these areas:
      </p>

      <div class="grid sm:grid-cols-2 gap-4 mb-6">
        {
          collaborationAreas.map((area) => (
            <div class="border border-slate-200 dark:border-slate-700 rounded-lg p-4 hover:border-blue-500 dark:hover:border-blue-400 transition-colors">
              <div class="flex items-center gap-3 mb-2">
                <FeatherIcon
                  name={area.icon}
                  class="h-5 w-5 text-blue-600 dark:text-blue-400"
                />
                <h4 class="font-medium">{area.title}</h4>
              </div>
              <p class="text-sm text-slate-600 dark:text-slate-300 mb-2">
                {area.description}
              </p>
              <ul class="text-xs text-slate-500 dark:text-slate-400 list-disc list-inside">
                {area.examples.map((example) => (
                  <li>{example}</li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>

      <div class="bg-slate-100 dark:bg-slate-700/30 rounded-lg p-4">
        <h4 class="font-medium mb-6 flex items-center gap-2">
          <FeatherIcon
            name="message-circle"
            class="h-5 w-5 text-blue-600 dark:text-blue-400"
          />
          <span>Get in touch to discuss collaboration:</span>
        </h4>
        <div class="grid sm:grid-cols-3 gap-4 place-items-center">
          <a
            href={`mailto:${email}`}
            class="flex items-center gap-2 text-slate-700 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
          >
            <FeatherIcon name="mail" class="h-4 w-4" />
            <span class="text-sm">{email}</span>
          </a>

          <a
            href={`https://www.linkedin.com/in/${linkedin}`}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 text-slate-700 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
          >
            <FeatherIcon name="linkedin" class="h-4 w-4" />
            <span class="text-sm">LinkedIn</span>
          </a>

          <a
            href={`https://github.com/${github}`}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 text-slate-700 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
          >
            <FeatherIcon name="github" class="h-4 w-4" />
            <span class="text-sm">GitHub</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
