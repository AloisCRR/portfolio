---
interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Alois Carrera | Software Engineer",
	description = "Personal portfolio of Alois Carrera, Software Engineer and Solutions Architect specializing in systems integration and API development.",
} = Astro.props;

import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta
			name="keywords"
			content="Software Engineer, Solutions Architect, Systems Integration, API Development, TypeScript, JavaScript, Python, Next.js, Nx, NestJS, FastAPI, MongoDB, PostgreSQL, AWS Lambda, Azure Functions, Docker, CI/CD, Microservices, Serverless Architecture, REST APIs, GraphQL, Agile Methodologies, Data Pipelines, IoT, Cloud Technologies, Scalable Systems, Monorepo Architecture, SAP Integration, H&M API, Elasticsearch, PowerBI, AWS IoT, Arduino, Telegraf, Grafana, EF SET Certificate, HACK4EDU"
		/>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/apple-touch-icon.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/favicon-16x16.png"
		/>
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<title>{title}</title>
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Alois Carrera",
				"givenName": "Alois",
				"familyName": "Carrera",
				"email": "aloiscarrera@gmail.com",
				"jobTitle": "Software Engineer",
				"homepage": "https://aloiscrr.dev",
				"gender": "male",
				"url": "https://aloiscrr.dev",
				"address": {
					"@type": "PostalAddress",
					"addressLocality": "Panama City",
					"addressRegion": "Panama",
					"addressCountry": "Panama"
				},
				"birthDate": "1999-10-06",
				"alumniOf": "Universidad Tecnológica de Panamá",
				"birthPlace": "Panama",
				"nationality": "Panamanian"
			}
		</script>
	</head>
	<body
		class="bg-gradient-to-br from-slate-100 to-slate-200 dark:bg-gradient-to-br dark:from-slate-800 dark:to-slate-900 text-slate-900 dark:text-slate-100 min-h-screen relative overflow-x-hidden"
	>
		<!-- Blurry gradient background using Tailwind with more random positioning -->
		<div class="fixed inset-0 overflow-hidden pointer-events-none -z-10">
			<!-- Light mode gradients -->
			<div class="absolute inset-0 dark:hidden">
				<!-- Various randomly positioned gradients with class names -->
				<div
					class="gradient-to-animate-1 opacity-0 absolute -top-20 left-[15%] w-[35rem] h-[35rem] bg-blue-300 rounded-full blur-[120px]"
				>
				</div>
				<div
					class="gradient-to-animate-2 opacity-0 absolute top-[25%] -right-24 w-[28rem] h-[28rem] bg-indigo-200 rounded-full blur-[100px]"
				>
				</div>
				<div
					class="gradient-to-animate-3 opacity-0 absolute top-[60%] left-[5%] w-[32rem] h-[32rem] bg-sky-200 rounded-full blur-[90px]"
				>
				</div>
				<div
					class="gradient-to-animate-4 opacity-0 absolute -bottom-32 right-[20%] w-[38rem] h-[38rem] bg-cyan-300 rounded-full blur-[110px]"
				>
				</div>
				<div
					class="gradient-to-animate-5 opacity-0 absolute top-[40%] left-[35%] w-[25rem] h-[25rem] bg-purple-200 rounded-full blur-[80px]"
				>
				</div>
				<div
					class="gradient-to-animate-6 opacity-0 absolute top-[10%] left-[60%] w-[20rem] h-[20rem] bg-teal-200 rounded-full blur-[70px]"
				>
				</div>
				<div
					class="gradient-to-animate-7 opacity-0 absolute bottom-[15%] left-[45%] w-[22rem] h-[22rem] bg-slate-200 rounded-full blur-[90px]"
				>
				</div>
			</div>

			<!-- Dark mode gradients -->
			<div class="absolute inset-0 hidden dark:block">
				<!-- Various randomly positioned gradients with class names -->
				<div
					class="dark-gradient-to-animate-1 opacity-0 absolute -top-20 left-[15%] w-[35rem] h-[35rem] bg-[#6a84d3] rounded-full blur-[120px]"
				>
				</div>
				<div
					class="dark-gradient-to-animate-2 opacity-0 absolute top-[25%] -right-24 w-[28rem] h-[28rem] bg-[#211965] rounded-full blur-[100px]"
				>
				</div>
				<div
					class="dark-gradient-to-animate-3 opacity-0 absolute top-[60%] left-[5%] w-[32rem] h-[32rem] bg-[#4a64b3] rounded-full blur-[90px]"
				>
				</div>
				<div
					class="dark-gradient-to-animate-4 opacity-0 absolute -bottom-32 right-[20%] w-[38rem] h-[38rem] bg-[#6a84d3] rounded-full blur-[110px]"
				>
				</div>
				<div
					class="dark-gradient-to-animate-5 opacity-0 absolute top-[40%] left-[35%] w-[25rem] h-[25rem] bg-[#3a54a3] rounded-full blur-[80px]"
				>
				</div>
				<div
					class="dark-gradient-to-animate-6 opacity-0 absolute top-[10%] left-[60%] w-[20rem] h-[20rem] bg-[#211965] rounded-full blur-[70px]"
				>
				</div>
				<div
					class="dark-gradient-to-animate-7 opacity-0 absolute bottom-[15%] left-[45%] w-[22rem] h-[22rem] bg-[#5a74c3] rounded-full blur-[90px]"
				>
				</div>
			</div>
		</div>

		<div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8 relative z-10">
			<slot />
		</div>

		<script>
			import { animate, utils } from "animejs";

			const gradients = utils.$('[class*="gradient-to-animate-"]');

			gradients.forEach((el) => {
				animate(el, {
					translateX: [
						utils.random(50, 100),
						utils.random(50, 100),
						utils.random(50, 100),
					],
					translateY: [
						utils.random(50, 100),
						utils.random(50, 100),
						utils.random(50, 100),
					],
					scale: [
						utils.random(0.9, 1.1),
						utils.random(0.9, 1.1),
						utils.random(0.9, 1.1),
					],
					opacity: [
						0,
						utils.random(0.1, 0.3),
						utils.random(0.1, 0.3),
						utils.random(0.1, 0.3),
					],
					easing: "cubicBezier",
					duration: utils.random(6000, 10000),
					alternate: true,
					loop: true,
				});
			});
		</script>
	</body>
</html>
